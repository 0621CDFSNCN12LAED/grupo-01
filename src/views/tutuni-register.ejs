    <body class="background">
        <%- include ("partials/header.ejs") %>
      
    <main>
        <div class="below-head-bar">
            <p class="title">Crea tu cuenta</p>
            <div class="register-box">
                <form class="flex-form-re register-box" method="POST" action="/users/register" enctype="multipart/form-data"> 
                    <div> 
                        <label for="name">Nombre y apellido</label>
                        <% if (locals.errors && errors.name) { %>
                            <%= errors.name.msg %>
                            <% } %>  
                        <input type="text" name="name" id="name" value="<%= locals.oldData ? oldData.name : null %>">
                    </div>
                    <div class="m-top">
                        <label for="username">Nombre de usuario</label>
                        <% if (locals.errors && errors.username) { %>
                            <%= errors.username.msg %>
                            <% } %>  
                        <input type="text" name="username" id="username" value="<%= locals.oldData ? oldData.username : null %>">
                    </div>
                    <div class="m-top">
                        <label for="email">Direccion de correo electronico</label>
                        <% if (locals.errors && errors.email) { %>
                            <%= errors.email.msg %>
                            <% } %>  
                        <input type="email" name="email" id="email" value="<%= locals.oldData ? oldData.email : null %>">              
                    </div>
                    <div class="m-top">
                        <label>Imagen para el perfil:</label>
                        <input class="hide" type="file" name=avatar>
                        <% if (locals.errors && errors.avatar) { %>
                            <%= errors.avatar.msg %>  
                            <% } %> 
                    </div>
                    <div class="m-top">
                        <label for="birthdate">Fecha de nacimiento</label>
                        <% if (locals.errors && errors.birthdate) { %>
                            <%= errors.birthdate.msg %>
                            <% } %> 
                        <input type="date" name="birthdate" id="birthdate" value="<%= locals.oldData ? oldData.birthdate : null %>"> 
                    </div>
                    <div class="m-top">
                        <label for="adress">Domicilio</label>
                        <% if (locals.errors && errors.adress) { %>
                            <%= errors.adress.msg %>
                            <% } %>
                        <input type="text" name="adress" id="adress" value="<%= locals.oldData ? oldData.adress : null %>"> 
                    </div>
                    <div class="m-top">
                        <label for="password">Contraseña</label> 
                        <% if (locals.errors && errors.password) { %>
                            <%= errors.password.msg %>
                            <% } %>
                        <input type="password" name="password" id="password">
                    </div>
                    <div class="m-top">
                        <label for="confirmPassword">Confirmar contraseña</label>
                        <% if (locals.errors && errors.confirmPassword) { %>
                            <%= errors.confirmPassword.msg %>
                            <% } %>
                        <input type="password" name="confirmPassword" id="confirmPassword">
                    </div>
                    <div class="m-top button-flex">
                        <button type="submit">Aceptar</button>
                        <h2><button type="reset">Borrar informacion</button></h2>
                    </div>
                </form>
    
                
                <!-- <div class="registrarse-laptop-re flex-abajo"> -->
                <div class="redirect">
                    <p class="redirect-text">¿Ya tienes una cuenta?</p>
                    <!-- <button class="mejorar-boton" type="submit"><a class="sacar-azul negro" href="/tutuni-login">INGRESA</a></button> -->
                    <a class="redirect-link" href="/tutuni-login">INGRESA</a>
                </div>    
            </div>  
        </div>
    </main>

    <%- include("partials/footer") %>
    </body>

</html>