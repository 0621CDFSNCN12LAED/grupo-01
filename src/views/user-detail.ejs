<!DOCTYPE html>
<html lang="en">

        <%- include ("partials/head.ejs") %>
        <!-- <link rel="stylesheet" href="/css/userLikes.css" /> -->
        <link rel="stylesheet" href="/css/user-profile.css">
        <title>Tus favoritos</title>
    </head>
  
    <%- include ("partials/header") %>
    <body class="background">
        <main>
            <div class="below-head-bar">
                
                <div class="user-profile">
                    <div class="container">
                        <div class="image">
                            <img src="/../images/users/<%= user.image %>" alt="imagen"/>
                        </div>
                        <p class="name"> <%= user.fullName %>  </p>
                        <div class="same-line adress">
                            <i class="fas fa-map-marker-alt"></i>
                            <p><%= user.adress %></p>
                        </div>
                        <div class="box">
                            <div class="location">
                                <div class="number"> 10 </div>
                                <p>Ventas</p>
                            </div>
                            <div class="location center">
                                <div class="number"> 5 </div>
                                <p>Compras</p>
                            </div>
                            <div class="location">
                                <div class="number"> 5 </div>
                                <p>Rating</p>
                            </div>
                        </div>
                        <!-- EN PROCESO -->
                        <div class="bottom-container">
                            <div class="same-line username">
                                <i class="fas fa-user"></i>
                                <p class="username"> <%= user.username %>  </p>
                            </div>
                            <div class="same-line email">
                                <i class="far fa-envelope"></i>
                                <p> <%= user.email %>  </p>
                            </div>
                        </div>
                           <!-- EN PROCESO -->

                      <!-- para borrar por completo de la base de datos -->
                        <div class="button-container">
                            <button class="editar"><a href="/users/profile/edit">Editar Perfil</button></a>
                        </div>
                        <div class="button-container">
                            <button class="editar"><a href="/users/profile/likes">Likes</button></a>
                        </div>
            

                        <div class="button-container  mt-2">
                            <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST">
                                <div class="button">
                                    <button class="logout text" type="submit">Borrar usuario</button>
                                </div>
                            </form>
    
                            <form action="/users/logout" method="GET">
                                <div class="button">
                                    <button class="logout text" type="submit">Terminar Sesion</button>
                                </div>
                            </form>
                        </div>
                           
                    </div>
                    
                </div>
                 
                    <!-- <% if (locals.isLogged) { %>
                    <div>esto solo se ve si el usuario esta logueado</div>
                    <% } %> -->

            </div>      

        </main>
        <!--El footer-->
        <%- include ("partials/footer.ejs") %>
        <!--El footer-->
    </body>

</html>