<body>
    
       <header class="position-top-bar">
            <div class="top-bar">
                <img src="images/menu.svg" alt="Menu" class="icon-size-menu">
                <div class="background-tutuni">
                    <h3 class="tutuni">TuTuni</h3>
                </div>
                <div class="container-relative">
                    <a href="/carrito">
                        <img src="/images/carrito.svg" alt="Carrito de compras" class="icon-size-shopping">
                        <p class="quantity-cart">0</p>
                    </a>
                </div>
            </div>
        </header> 
    
    
    
        <main>
          <section>
    <div class="article-detail-main">
                <div><h3 class="product-title">SHORT JOGGING DE POLAR</h3></div>
                <div><img src="/images/short-negro-jogger.JPG" alt="imagen short" width="100%" class="product-image"></div>
            <div class="price">
                <i class="fas fa-dollar-sign"></i> 500 ARS</div>
            <div class="size-container">
                <div class="size-circle">XS</div>
                <div class="size-circle">S</div>
